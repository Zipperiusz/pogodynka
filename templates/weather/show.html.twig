{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ weather.datetime ? weather.datetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ weather.temperature }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ weather.humidity }}</td>
            </tr>
            <tr>
                <th>Wind</th>
                <td>{{ weather.wind }}</td>
            </tr>
            <tr>
                <th>Rainchance</th>
                <td>{{ weather.rainchance }}</td>
            </tr>
            <tr>
                <th>Isgrilltime</th>
                <td>{{ weather.isgrilltime ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_index') }}">back to list</a>

    <a href="{{ path('app_weather_edit', {'id': weather.id}) }}">edit</a>

    {{ include('weather/_delete_form.html.twig') }}
{% endblock %}
